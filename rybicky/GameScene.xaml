<UserControl x:Class="rybicky.GameScene"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rybicky"
        mc:Ignorable="d"
        Focusable="True"
        Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="195*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="fish" Grid.Row="1" Width="199" Height="103" Margin="2,121,598,120">
            <Canvas.LayoutTransform>
                <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
            </Canvas.LayoutTransform>
            <Polygon x:Name="tail" Points="10, 110 60, 10 110, 110" Fill="Orchid" Stroke="Black" StrokeThickness="1" Canvas.Top="-8" Canvas.Left="111" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Polygon.RenderTransform>
                    <RotateTransform Angle="90"/>
                </Polygon.RenderTransform>
            </Polygon>
            <Ellipse x:Name="body" Stroke="Black" Width="140" Height="100" Fill="Orchid" StrokeThickness="1" Canvas.Left="59" Canvas.Top="2" />
            <Ellipse Stroke="Black" StrokeThickness="1" Fill="#FFFFFEE5" Width="25" Height="25" Canvas.Left="155" Canvas.Top="35"/>
            <Ellipse Stroke="Black" StrokeThickness="1" Fill="Black" Width="15" Height="15" Canvas.Left="160" Canvas.Top="40"/>
        </Canvas>
        <Rectangle Grid.Row="1" Width="30" Fill="RosyBrown"></Rectangle>
        <Rectangle Grid.Row="1" Width="30" Height="60" Fill="FloralWhite"></Rectangle>




        <Rectangle Grid.Row="2" Fill="SandyBrown"></Rectangle>
        <Button HorizontalAlignment="Left" Height="35" Margin="720,0,0,0" VerticalAlignment="Center" Width="50" Click="Button_Click_1" Background="Transparent" BorderThickness="0" Cursor="Hand">
            <Image Source="Image/menu.png"></Image>
        </Button>
    </Grid>
</UserControl>
