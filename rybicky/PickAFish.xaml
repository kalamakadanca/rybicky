<UserControl x:Class="rybicky.PickAFish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rybicky"
        mc:Ignorable="d">
    <Viewbox >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="195*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>

            <Rectangle StrokeThickness="1" Grid.Row="1" Stroke="DarkBlue" Fill="LightBlue"/>
            <Rectangle Grid.Row="2" Fill="SandyBrown"></Rectangle>
            <Border x:Name="pink_border" Grid.Row="1" Width="119" Height="63" Margin="1,100,410,130" BorderBrush="Transparent" BorderThickness="2" MouseLeftButtonDown="PinkFish_Click" Cursor="Hand">
                <Canvas x:Name="pink_fish" Width="199" Height="103">
                    <Canvas.LayoutTransform>
                        <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                    </Canvas.LayoutTransform>
                    <Polygon Points="10, 110 60, 10 110, 110" Fill="Orchid" Stroke="Black" StrokeThickness="1" Canvas.Top="-8" Canvas.Left="111" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Polygon.RenderTransform>
                            <RotateTransform Angle="90"/>
                        </Polygon.RenderTransform>
                    </Polygon>
                    <Ellipse Stroke="Black" Width="140" Height="100" Fill="Orchid" StrokeThickness="1" Canvas.Left="59" Canvas.Top="2" />
                    <Ellipse Stroke="Black" StrokeThickness="1" Fill="#FFFFFEE5" Width="25" Height="25" Canvas.Left="155" Canvas.Top="35"/>
                    <Ellipse Stroke="Black" StrokeThickness="1" Fill="Black" Width="15" Height="15" Canvas.Left="160" Canvas.Top="40"/>
                </Canvas>
            </Border>

            <Border x:Name="orange_border" Grid.Row="1" Width="119" Height="63" Margin="12,220,588,48" BorderBrush="Transparent" BorderThickness="2" MouseLeftButtonDown="OrangeFish_Click" Cursor="Hand">
                <Canvas x:Name="orange_fish" Width="199" Height="103">
                    <Canvas.LayoutTransform>
                        <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                    </Canvas.LayoutTransform>
                    <Polygon Points="10, 110 60, 10 110, 110" Fill="DarkOrange" Stroke="Black" StrokeThickness="1" Canvas.Top="-8" Canvas.Left="111" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Polygon.RenderTransform>
                            <RotateTransform Angle="90"/>
                        </Polygon.RenderTransform>
                    </Polygon>
                    <Ellipse Stroke="Black" Width="140" Height="100" Fill="DarkOrange" StrokeThickness="1" Canvas.Left="59" Canvas.Top="2" />
                    <Ellipse Stroke="Black" StrokeThickness="1" Fill="#FFFFFEE5" Width="25" Height="25" Canvas.Left="155" Canvas.Top="35"/>
                    <Ellipse Stroke="Black" StrokeThickness="1" Fill="Black" Width="15" Height="15" Canvas.Left="160" Canvas.Top="40"/>
                </Canvas>
            </Border>

            <Border x:Name="green_border" Grid.Row="1" Width="119" Height="63" Margin="12,25,588,242" BorderBrush="Transparent" BorderThickness="2" MouseLeftButtonDown="GreenFish_Click" Cursor="Hand">
                <Canvas x:Name="green_fish" Width="199" Height="103">
                    <Canvas.LayoutTransform>
                        <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                    </Canvas.LayoutTransform>
                    <Polygon Points="10, 110 60, 10 110, 110" Fill="DarkOliveGreen" Stroke="Black" StrokeThickness="1" Canvas.Top="-8" Canvas.Left="111" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Polygon.RenderTransform>
                            <RotateTransform Angle="90"/>
                        </Polygon.RenderTransform>
                    </Polygon>
                    <Ellipse Stroke="Black" Width="140" Height="100" Fill="DarkOliveGreen" StrokeThickness="1" Canvas.Left="59" Canvas.Top="2" />
                    <Ellipse Stroke="Black" StrokeThickness="1" Fill="#FFFFFEE5" Width="25" Height="25" Canvas.Left="155" Canvas.Top="35"/>
                    <Ellipse Stroke="Black" StrokeThickness="1" Fill="Black" Width="15" Height="15" Canvas.Left="160" Canvas.Top="40"/>
                </Canvas>
            </Border>
            
            <Label Content="Klikni na rybu, za kterou chceš hrát" HorizontalAlignment="Left" Margin="361,67,0,0" Grid.Row="1" VerticalAlignment="Top" Height="50" Width="250"/>
            <Button x:Name="start_game" Visibility="Collapsed" Content="Start" HorizontalAlignment="Left" Margin="403,200,0,0" Grid.Row="1" VerticalAlignment="Top" Height="46" Width="150" Click="start_game_Click" Cursor="Hand"/>
            <Button Content="Zpět" HorizontalAlignment="Left" Height="38" Margin="610,271,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Click="back_to_menu_Click" Cursor="Hand"/>


        </Grid>
    </Viewbox>
</UserControl>
